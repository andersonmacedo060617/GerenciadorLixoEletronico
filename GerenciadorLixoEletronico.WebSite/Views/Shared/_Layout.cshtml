@using GerenciadorLixoEletronico.WebSite.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Informativo de Coleta de Lixo Eletronico</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a  href="@Url.Action("Index","Home")">
                    <img src="~/Imagem/vianna.png" style="background-color:#ffffff" width='200px' height="60px" />
                </a>
            </div>
            @{
                if (!UsuariosUtils.isLogado)
                {
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="@Url.Action("Index")"><i class="glyphicon glyphicon-home"></i> Pagina Principal</a>
                            </li>
                            <li class="divider"></li>
                            <li>
                                <a href="@Url.Action("PostoDeColeta")"><i class="glyphicon glyphicon-wrench"></i> Posto de Coleta   </a>
                            </li>
                           
                            <li class="divider"></li>
                            
                        </ul>
                    </div>
                }
                else
                {
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="@Url.Action("Index")"><i class="glyphicon glyphicon-home"></i> Pagina Principal</a>
                            </li>
                            <li class="divider"></li>
                           <li>
                                <a href="@Url.Action("PostoDeColeta")"><i class="glyphicon glyphicon-wrench"></i> Posto de Coleta   </a>
                            </li>
                           
                            <li class="divider"></li>
                            @*<li>
                                <a href="@Url.Action("Administracao")"><i class="glyphicon glyphicon-cog"></i> Administração do Sistema</a>
                            </li>*@
                        </ul>
                    </div>
                }
            }
    </nav>
    

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year</p>
            </footer>
        </div>
    
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>

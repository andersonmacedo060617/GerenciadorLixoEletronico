@model GerenciadorLixoEletronico.NH.Model.Pais

@{
    ViewBag.Title = "NovoP1";
    Layout = "~/Views/Shared/_AdministradorLayout.cshtml";
}

<h2>NovoP1</h2>

@using (Html.BeginForm("NovoP2", "PostoDeColeta", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Seleção do País</h4>
        <hr />
        
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Id, (SelectList)ViewBag.lstPaises, "Selecione...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Proximo" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
